package modell;

import javax.servlet.http.HttpServletRequest;
import org.apache.commons.lang3.StringEscapeUtils;


public class PersonSkjema  {
	
/*
 * Lager en ny person.
 * 
 * @param String fornavn
 * @param String etternavn
